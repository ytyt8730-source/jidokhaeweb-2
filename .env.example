# 지독해 웹서비스 환경 변수 템플릿

# Supabase 설정
# 프로젝트 대시보드 > Project Settings > API 에서 확인 가능
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# 포트원 (결제) 설정
# 관리자 콘솔 > 결제 연동 > API 키 관리
PORTONE_IMP_KEY=your-imp-key
PORTONE_IMP_SECRET=your-imp-secret
PORTONE_WEBHOOK_SECRET=your-webhook-secret

# 솔라피 (알림톡) 설정
# 솔라피 대시보드 > API 키 관리
SOLAPI_API_KEY=your-api-key
SOLAPI_API_SECRET=your-api-secret
SOLAPI_SENDER_NUMBER=your-sender-number

# 카카오 (로그인/채널) 설정
# 카카오 디벨로퍼스 > 내 애플리케이션 > 앱 키
KAKAO_CLIENT_ID=your-client-id
KAKAO_CLIENT_SECRET=your-client-secret

# 앱 설정
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Vercel Cron 인증 (프로덕션 필수)
# 랜덤 문자열 생성: openssl rand -base64 32
CRON_SECRET=your-cron-secret

# 계좌이체 설정 (M2)
# 입금 받을 계좌 정보 (클라이언트에서 사용하므로 NEXT_PUBLIC_ 필수)
NEXT_PUBLIC_BANK_NAME=카카오뱅크
NEXT_PUBLIC_BANK_ACCOUNT_NUMBER=3333-12-3456789
NEXT_PUBLIC_BANK_ACCOUNT_HOLDER=지독해
