{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/cron/expire-deposits",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/send-reminders?days_before=3",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/send-reminders?days_before=1",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/send-reminders?days_before=0",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/check-waitlist-expiration",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/send-segment-reminders?type=monthly",
      "schedule": "0 8 25-31 * *"
    },
    {
      "path": "/api/cron/send-segment-reminders?type=onboarding",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/send-segment-reminders?type=dormant",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/send-segment-reminders?type=eligibility",
      "schedule": "0 8 * * *"
    }
  ]
}
